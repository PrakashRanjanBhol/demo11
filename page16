//        if (editor != null) {
//            int caretPosition = editor.getCaretModel().getOffset();
//            editor.getDocument().insertString(caretPosition, codeContent);
//        } else {
//            Messages.showErrorDialog("No active editor found!", "Error");
//        }
//    }
